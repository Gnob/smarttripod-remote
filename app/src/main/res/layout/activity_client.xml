<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ClientActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↑"
        android:id="@+id/upBtn"
        android:textSize="24sp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/shotBtn"
        android:layout_alignStart="@+id/shotBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↓"
        android:id="@+id/downBtn"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/shotBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:id="@+id/leftBtn"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="→"
        android:id="@+id/rightBtn"
        android:textSize="24sp"
        android:layout_alignTop="@+id/shotBtn"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shot"
        android:id="@+id/shotBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto"
        android:id="@+id/autoBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/rightBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/serverBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnected"
        android:id="@+id/btStatTxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/objStatTxt"
        android:layout_below="@+id/btStatTxt"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❩"
        android:id="@+id/rightRotateBtn"
        android:layout_above="@+id/rightBtn"
        android:layout_toEndOf="@+id/upBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftRotateBtn"
        android:text="❨"
        android:layout_above="@+id/leftBtn"
        android:layout_toStartOf="@+id/upBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set timer"
        android:id="@+id/timerBtn"
        android:layout_alignTop="@+id/autoBtn"
        android:layout_toEndOf="@+id/leftBtn"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/timerTxt"
        android:layout_alignBottom="@+id/timerBtn"
        android:layout_toStartOf="@+id/timerBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANORAMA"
        android:id="@+id/panoramaBtn"
        android:layout_above="@+id/autoBtn"
        android:layout_alignEnd="@+id/autoBtn"/>

</RelativeLayout>
